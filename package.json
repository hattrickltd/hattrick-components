{
  "name": "@hattrickltd/hattrick-components",
  "version": "0.0.1",
  "description": "Web components for Hattrick.org.",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "dev": "stencil build --dev --watch --serve",
    "start": "npm run dev",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@stencil/core": "0.11.0",
    "@stencil/sass": "0.1.0",
    "@types/jest": "^22.2.3",
    "jest": "^22.4.4",
    "tslint": "^5.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bodinaren/hattrick-components.git"
  },
  "author": "Marcus Bodin <bodinaren@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bodinaren/hattrick-components/issues"
  },
  "homepage": "https://github.com/bodinaren/hattrick-components",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "keywords": [
    "hattrick",
    "webcomponents"
  ]
}
